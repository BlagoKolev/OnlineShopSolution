@inherits DisplayProductsBase

@foreach (var product in Products)
{
    <div class="col-md-3 mb-2">
        <a href="#">
            <div class="card">
                <img class="img-thumbnail" src="@product.ImageUrl" />
                <div class="card-body">
                    <h5 class="card-title mb-3">@product.Name</h5>
                    <p class="card-text">
                        <b>@product.Price.ToString("C")</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}
